<!-- funding-given.hbs -->
<div id="fundinggiven-{{idx}}">
  <div data-role="input-control" class="fundgiven-input input-control text">
    <input type="text" name="fundgiven" placeholder="Fundee" style="display:inline-block; width:50%;"
      list="funding-given-list" class="fundee"/>
    <datalist id="funding-given-list"></datalist>
    <input type="text" name="fundgiven_amt" placeholder="Amount" style="display:inline-block; width: 27%;"
